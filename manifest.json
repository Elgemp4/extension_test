{
  "manifest_version": 3,
  "name": "Side Panel Extension",
  "version": "1.0",
  "description": "A Chrome extension with a side panel that opens at startup.",
  "permissions": ["sidePanel"],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
